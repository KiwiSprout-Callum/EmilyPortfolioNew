---
import { Image } from 'astro:assets';
import EmilyImg from '../../assets/emily-img.png';
import WarmDesk from '../../assets/warm-desk.png';
---
<section class="page-layout-constrained">
  <div class="relative rounded-lg overflow-hidden aspect-[369/454] md:aspect-[1365/560] ">
    <Image
    src={WarmDesk}
    alt="Emily sitting at a desk with a warm cup of coffee"
    class="h-full w-full  object-cover "
    width={1365}
    height={560}
    />
      <!-- mobile -->
     <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black/90 z-10 md:hidden block"></div>

    <div class="md:max-w-[420px] md:p-8  grid grid-cols-[80px_1fr] items-center justify-between gap-4  absolute bottom-6 left-6 z-20 pr-6">
      
      <div class="absolute inset-0 md:rounded-2xl bg-black/60 z-10  md:block hidden backdrop-blur-xs"></div>
        <div class="rounded-[50%] overflow-hidden w-20 h-20  z-30">
          <Image
            src={EmilyImg}
            alt="Emily Eaton"
            class="w-full h-full object-cover "
            width={80}
            height={80}
          />
        </div>
        <div class="text-white z-30">
          <h2 class="body-small-alt font-semibold mb-2">Emily Eaton</h2>
          <h3 class="body-small-alt ">An independent designer based in Aotearoa New ZealandğŸ“</h3>
        </div>
    </div>
  </div>
</section>