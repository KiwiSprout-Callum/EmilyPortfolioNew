---
import AnimatedMesh from "../AnimatedMesh.astro";
import CalendlyWidget from "../CalendlyWidget.astro";
import Button from "../Button.astro";
---

 <section class= "page-layout-constrained">
  <div class="bg-gradient-to-b from-champagne to-white rounded-xl pt-[72px]  pb-8">
    <div class="flex flex-col lg:flex-row items-center mx-auto max-w-[313px] box-content sm:max-w-full px-6 sm:px-[32px]  lg:px-[90px] md:py-16 md:gap-24 md:justify-between ">
      <div class="w-full">
        <h2 class="title-l mb-3 hidden sm:flex">
          Simple, smart design for<br> ambitious businesses
        </h2>
        <h2 class="title-l mb-3 flex sm:hidden">
          Simple,<br> smart design for ambitious businesses
        </h2>
        <h3 class="subtitle-l mb-8 ">
          Crafting websites that feel like you.<br> Clear, confident, and built to convert.
        </h3>
        <div class=" w-fit">
      
          <div class="md:max-w-fit  items-center flex flex-col max-w-full min-w-[320px]">
            <Button 
            text="Book your free website audit"

            href="https://calendly.com/e-eaton/30min"
            target="_blank"
          />
        
          </div>
          <p class="mt-3 text-black-700 text-center body-small-alt">
            30 minute no-obligation consultation
          </p>
          </div>
      </div>
      
    </div>
     
  </div>
 </section>


